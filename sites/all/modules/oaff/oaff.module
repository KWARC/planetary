 * @param $node_type the type of the node to be created
 * @return the id of the newly created node
 */
function oaff_create_node($title, $lang, $format, $dpath, $location, $node_type) {
  $newnode = (object) array(
   'type' => $node_type,
   'uid' => 0,
   'created' => strtotime("now"),
