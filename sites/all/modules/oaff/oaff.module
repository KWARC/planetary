/**
 * Creates nodes for all documents in planetary_repo path where there is a oaff-connected content type 
 * associated with that format (based on file extension).  (All set up in OAFF configuration)
 */
function oaff_create_nodes() {
  $oaff_config = variable_get('oaff_config');
  $oaff_config['latest_nodes'] = 0;
  variable_set('oaff_config', $oaff_config);
  
  _oaff_create_meta_nodes();
  _oaff_crawl_archives();
  $oaff_config = variable_get('oaff_config');
  $nr_nodes = $oaff_config['latest_nodes'];
  if ($nr_nodes == 0) {
    drupal_set_message("Successfully crawled archives, nothing new to import");
  } else {
    drupal_set_message("Successfully created $nr_nodes nodes");
  }
  $out = '<div> <button class="btn btn-primary " onclick="window.location = \'/mh/initialize-nodes\'"> Continue </button> </div> ';
  return $out;
}


/**
 * function crawl oaff archives for files to create nodes from (based on extension and OAFF config)
 * is called by oaff_create_nodes
 */
function _oaff_create_meta_nodes() {
  $oaff_config = variable_get('oaff_config');
  $archives_nid = $oaff_config['archives_nid'];
  $archives_node = node_load($archives_nid);
  $archives_body = $archives_node->body['und'][0]['value'];
  if ($archives_body == "") {
    $archives_body = "<ul>";
    $groups = planetary_repo_list("");
    foreach ($groups as $group) {
      if (planetary_repo_is_dir($group) && $group[0] != '.') {
        $archives = planetary_repo_list($group);
        foreach ($archives as $archive) {
          if (planetary_repo_is_dir(oaff_join_path(array($group, $archive))) && $archive[0] != '.') {
            $arch_info = _oaff_get_archive_info($group, $archive);
            $archive_id = $arch_info['id'];
            if (isset($oaff_config['formats'][$archive_id])) {
              $archives_body .= "<li> <a href=\"/$group/$archive\"> $archive_id </a> </li>";
              $archive_desc = "<ul><li><a href=\"/$group/$archive/source\">Content</a> </li><li><a href=\"http://gl.mathhub.info/$group/$archive\" target=\"_blank\">Sources</a> </li></ul>";
              if (!drupal_lookup_path('source', "$group/$archive")) {
                $node_info = oaff_create_static_node($archive_id, "$group/$archive", $archive_desc);
                //$oaff_config['nids'][] = $node_info['nid'];
              }
            }
          }
        }
      }
    }
    $archives_body .= "</ul>";
    $archives_node->body['und'][0]['value'] = $archives_body;
    node_save($archives_node);
    variable_set('oaff_config',$oaff_config);
  } else {
    drupal_set_message("Archives node already has content, delete to regenerate or update it manually if needed", 'warning');
  }
}

/**
 * function crawl oaff archives for files to create nodes from (based on extension and OAFF config)
 * is called by oaff_create_nodes
 */
function _oaff_crawl_archives() {
  $groups = planetary_repo_list("");
  foreach ($groups as $group) {
    if (planetary_repo_is_dir($group) && $group[0] != '.') {
      $archives = planetary_repo_list($group);
      foreach ($archives as $archive) {
        if (planetary_repo_is_dir(oaff_join_path(array($group, $archive))) && $archive[0] != '.') {
          _oaff_crawl_archive($group, $archive);
        }
        $oaff_config = variable_get('oaff_config');
        if ($oaff_config['latest_nodes'] >= 1000) {
          break 2;
        }
      }
    }
  }
}


function _oaff_get_archive_info($group, $archive_path) {
  $oaff_config = variable_get('oaff_config');
  
  // getting info from manifest
  $mf_path = oaff_join_path(array($group, $archive_path, "META-INF/MANIFEST.MF"));
  
  $manifest = planetary_repo_load_file($mf_path);
  $mf_lines = explode("\n", $manifest);
  $docbase = 'http://docs.omdoc.org/default'; // default
  $archive = 'default'; // default
  foreach ($mf_lines as $line) {
    $pair = explode(":", $line, 2);
    if (trim($pair[0]) == "narration-base") {
      $docbase = trim($pair[1]);
    } elseif (trim($pair[0]) == "id") {
      $archive = trim($pair[1]);
    }
  }
  return array('docbase' => $docbase, 'id' => $archive);
}

/**
 *  function to crawl one archive for files to create oaff nodes from (based on extension and OAFF config)
 * is called by _oaff_crawl_archives() for each found archive
 * @param $path the VFS folder-path of the archive
 */
function _oaff_crawl_archive($group, $archive_path) { 
  $oaff_config = variable_get('oaff_config');
  $docbases = array();
  if (isset($oaff_config['docbases'])) {
    $docbases = $oaff_config['docbases'];
  }
  $archive_ids = array();
  if (isset($oaff_config['archive_id'])) {
    $archive_ids = $oaff_config['archive_id'];
  }
  if (!isset($archive_ids['archive_id'][$group])) {
    $archive_ids['archive_id'][$group] = array();
  }
  if (!isset($archive_ids['archive_id'][$group][$archive_path])) {
    $archive_ids['archive_id'][$group][$archive_path] = array();
  }

  // getting info from manifest
  $arch_info = _oaff_get_archive_info($group, $archive_path);
  $docbase = $arch_info['docbase'];
  $archive_id = $arch_info['id'];
  
  if (isset($oaff_config['formats'][$archive_id])) {
    drupal_set_message("Crawling archive $archive_id."); 
    // crawling archive
    $docbases[$archive_id] = $docbase;
    $oaff_config['docbases'] = $docbases;
    $oaff_config['archive_id'][$group][$archive_path] = $archive_id;
    variable_set('oaff_config', $oaff_config);
    // crawling dimension folder
    $nid = oaff_crawl_dimension_folder($group, $archive_path, $archive_id, 'source', "");
    oaff_set_children($oaff_config['archives_nid'], array($nid));
    return true;
  } else {
    drupal_set_message("Ignoring archive $archive_id because format is not configured. Please update OAFF configuration to enable it.", 'warning');
    return false;
  }
}

function oaff_join_path($arguments) {
  $path = '';
  $args = array();
  foreach ($arguments as $a) {
    if ($a !== '') {
      $args[] = $a;
    }
  }
  $arg_count = count($args);
  for ($i = 0; $i < $arg_count; $i++) {
    $folder = $args[$i];
    if ($i != 0 and $folder[0] == DIRECTORY_SEPARATOR) {
      $folder = substr($folder, 1);
    } 
    if ($i != $arg_count - 1 and substr($folder, -1) == DIRECTORY_SEPARATOR) {
      $folder = substr($folder, 0, -1);
    }
    $path .= $folder;
    if ($i != $arg_count - 1) {
      $path .= DIRECTORY_SEPARATOR;
    }
  }
  return $path;
}

function oaff_crawl_dimension_folder($group, $archive_path, $archive_id, $dimension, $rel_path) {
  $extension = "omdoc";
  if ($dimension == "source") { // getting source extension from config
    $oaff_config = variable_get('oaff_config');
    $extension = $oaff_config['extensions'][$oaff_config['formats'][$archive_id]];
  }
  $folder_path = oaff_join_path(array($group, $archive_path, $dimension, $rel_path));
  $cids = array();
  $lang_groups = array();

  $items = planetary_repo_list($folder_path);
  foreach ($items as $item) {
    if ($item[0] != '.' && $item != "all.tex" && $item != "localpaths.tex") { // ignoring hidden files and folders, 
                                                                              // also lmh/stex specific ones  
      $item_path = oaff_join_path(array($folder_path, $item));
      if (planetary_repo_is_dir($item_path)) {
        print_r($item_path);
        $cids[] = oaff_crawl_dimension_folder($group, $archive_path, $archive_id, $dimension, oaff_join_path(array($rel_path, $item)));
      } else {
        $pathinfo = oaff_get_path_info($item_path);
        if (isset($pathinfo['extension']) && $pathinfo['extension'] == $extension) {
          $nid = oaff_make_file_node($group, $archive_path, $archive_id, $dimension, $rel_path, $item);
          $cids[] = $nid;
          $base_module = $pathinfo['base_module'];
          if ($pathinfo['lang'] == 'und') { 
            $lang_groups[$base_module]['base'] = $nid;
          } 
          $lang_groups[$base_module]['variants'][] = array('lid' => $nid, 'location' => $item_path);
        } // else ingore 
      }
    }
    $oaff_config = variable_get('oaff_config');
    if ($oaff_config['latest_nodes'] >= 1000) {
      break;
    }
  }
  $nid = oaff_make_folder_node($group, $archive_path, $archive_id, $dimension, $rel_path);  
  oaff_set_children($nid, $cids);   
  oaff_set_lang_groups($lang_groups);
  return $nid;
}


function oaff_create_static_node($title, $alias, $content, $show_in_menu = false) {
  $static_node = (object) array(
   'type' => 'page',
   'uid' => 0,
   'created' => strtotime("now"),
   'changed' => strtotime("now"),
   'status' => 1,
   'comment' => 2,
   'promote' => 0,
   'moderate' => 0,
   'sticky' => 0,
   'language' => 'und'
  );

  $static_node->title = $title;
  node_object_prepare($static_node);
  $static_node->body['und']['0'] = array('value' => $content, 'format' => 'full_html');
  node_save($static_node);
  $path_opt = array(
    'source' => 'node/' . $static_node->nid,
    'alias' => $alias,
  );
  path_save($path_opt);
  
  if ($show_in_menu) { //adding menu entry
    $arch_item = array(
      'link_path' => drupal_get_normal_path($alias),
      'link_title' => $title,
      'weight' => 10,
